namespace micro_profiler;

table ProcessInitializationPayload
{
	resolution : ulong;
	executable_path : string;
}


table ImageLoadInfo
{
	address : ulong;
	path : string;
}

table LoadImagesPayload
{
	images : [ImageLoadInfo];
}


struct FunctionStatistics
{
	address : ulong;
	times_called : ulong;
	max_reentrance : ulong;
	inclusive_time : long;
	exclusive_time : long;
	max_call_time : long;
}

table FunctionStatisticsDetailed
{
	statistics : FunctionStatistics;
	children_statistics : [FunctionStatistics];
}

table UpdateStatisticsPayload
{
	statistics : [FunctionStatisticsDetailed];
}


table UnloadImagesPayload
{
	images : [ulong];
}


union Payload
{
	ProcessInitializationPayload,
	LoadImagesPayload,
	UpdateStatisticsPayload,
	UnloadImagesPayload
}

table Message
{
	payload : Payload;
}

root_type Message;
